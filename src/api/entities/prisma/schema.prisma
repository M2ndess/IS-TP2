// Prisma schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Players {
  id              Int       @id
  name            String
  last_name       String
  gender          String
  age             Int
  country         String
  competitor_id   String
  competitor_name String
  height          String
  weight          String
  overall_rank    String
  overall_score   String
  year            String
  competition     String
  height_cm       String
  weight_kg       String
  team            Team?      @relation(fields: [team_id], references: [id])
  team_id         Int?

  @@map("players")
}

model Team {
  id      Int     @id
  name String
  players Players[]

  @@map("team")
}

model Competition {
  id                Int              @id
  year              String
  competition_name  String
  competition_players CompetitionPlayer[]

  @@map("competition")
}

model CompetitionPlayer {
  id              Int            @id
  competitor_id   String
  competitor_name String
  overall_rank    String
  overall_score   String
  competition_id  Int            @map("competition_id")
  competition     Competition       @relation(fields: [competition_id], references: [id])

  @@map("competitionPlayer")
}

model Country {
  id       Int   @id
  name      String  @unique
  latitude  String
  longitude String

  @@map("country")
}
